program eje8atp1;

var 
	hTrabajadas, valorhora, descuento, descuentoBruto, sueldoNeto, sueldoBruto:integer;

BEGIN
	descuento:= 10;
	
	writeln('ingrese el valor por hora:');
	readln(valorhora);
	
	writeln('ingrese las horas trabajadas:');
	readln(hTrabajadas);
	
	sueldoNeto:= valorhora * hTrabajadas;
	descuentoBruto:= (sueldoNeto * descuento) DIV 100;
	sueldoBruto:= sueldoNeto - descuentoBruto;
	
	writeln('el sueldo bruto es: ', sueldoBruto);
end.
